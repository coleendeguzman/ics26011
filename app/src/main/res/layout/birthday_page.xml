<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4332DE"
    tools:context=".BirthdayPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBirthday"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_width="140dp"
        android:layout_height="103dp"
        app:srcCompat="@drawable/birthday" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/BirthdayRecycler"
            android:layout_width="match_parent"
            android:layout_height="472dp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivBirthday" />

        <Button
            android:id="@+id/btn_add_wish"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/anton"
            android:shadowColor="#000000"
            android:shadowDx="4"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="ADD WISH"
            android:textColor="#00BF63"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>