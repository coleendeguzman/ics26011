<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F568C0"
    tools:context=".SchoolPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSchool"
            android:layout_width="119dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/school" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/SchoolRecycler"
            android:layout_width="match_parent"
            android:layout_height="468dp"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivSchool" />

        <TextView
            android:id="@+id/btn_add_wish"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="44dp"
            android:fontFamily="@font/anton"
            android:shadowColor="#000000"
            android:shadowDx="4"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="ADD WISH"
            android:textColor="#02D5F5"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>